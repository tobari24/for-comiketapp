# encoding: utf-8
	<p>
		<strong>サークル名:</strong>
		<%= @circle.name %>
	</p>

	<p>
		<strong>日にち:</strong>
		<%= @circle.date %>
	</p>

	<p>
		<strong>スペース:</strong>
		<%= @circle.space %>
	</p>

	<p>
		<strong>URL:</strong>
		<%= link_to @circle.url, @circle.url %>
	</p>
	
	<h2>お品書き</h2>
	<% @circle.items.each do |item| %>
		<p>
			<strong>お品物:</strong>
			<%= item.itemname %>
		</p>
		<p>
			<strong>値段:</strong>
			<%= item.price %>
		</p>
	<% end %>

	<h2>お品書き追加:</h2>
	<%= form_for([@circle, @circle.items.build]) do |f| %>
		<p>
			<%= f.label '名前' %>
			<%= f.text_field :itemname %>
		</p>

		<p>
			<%= f.label '価格' %>
			<%= f.number_field :price %>
		</p>
		<p>
			<%= f.submit '登録'%>
		</p>
	<% end %>